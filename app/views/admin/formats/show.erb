<div class="row justify-content-md-center">
  <div class="col-lg-8 col-md-12">
    <div class="alert alert-primary border my-4" role="alert">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><%= link_to 'Administration', admin_index_path %></li>
          <li class="breadcrumb-item"><%= link_to 'Formats', admin_formats_path %></li>
          <li class="breadcrumb-item "><%= @format.name %></li>
        </ol>
      </nav>
    </div>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-lg-5 col-md-6">
    <div class="card">
      <h5 class="card-header">Format</h5>
      <div class="card-body">

        <form>
          <%= label :format, 'Nom', class: 'mt-1' %>
          <%= text_field :format, :name, class: 'form-control mt-1', readonly: :readonly  %>

          <%= label :format, 'Identifiant', class: 'mt-3' %>
          <%= text_field :format, :code, class: 'form-control mt-1', required: :required, minlength: 2, maxlength: 2, readonly: :readonly %>

          <%= label :format, 'Groupe', class: 'mt-3' %>
          <%= text_field :format, :group, class: 'form-control mt-1', required: :required, minlength: 2, maxlength: 2, readonly: :readonly %>

          <%= link_to edit_admin_format_path(@format), class: 'btn btn-warning mt-3' do %>
            <i class="fas fa-pencil-alt"> Modifier</i>
          <% end %>
        </form>
      </div>
    </div>
  </div>
</div>
