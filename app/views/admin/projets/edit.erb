<div class="row justify-content-md-center">
  <div class="col-lg-8 col-md-12">
    <div class="alert alert-primary border my-4" role="alert">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><%= link_to 'Administration', admin_index_path %></li>
          <li class="breadcrumb-item"><%= link_to 'Projets', admin_projets_path %></li>
          <li class="breadcrumb-item "><%= @projet.name %></li>
        </ol>
      </nav>
    </div>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-lg-5 col-md-6">
    <div class="card">
      <h5 class="card-header">Edition projet</h5>
      <div class="card-body">

        <%= form_with(model: @projet, url: admin_projet_path) do |f| %>
          <%= f.label 'Nom', class: 'mt-1' %>
          <%= f.text_field :name, class: 'form-control mt-1', required: :required  %>

          <%= f.label 'Identifiant', class: 'mt-1' %>
          <%= f.text_field :code, class: 'form-control mt-1', required: :required, minlength: 2, maxlength: 2  %>

          <%= f.label :user, 'Description', class: 'mt-3' %>
          <%= f.text_area :description, class: 'form-control mt-1', rows: 10 %>

          <%= link_to admin_projet_path(@projet), class: 'btn btn-primary mt-3' do %>
            <i class="fas fa-search"> Détail</i>
          <% end %>

          <%= f.button :submit, class: 'btn btn-success mt-3', data: {confirm: "Êtes-vous bien sûr de vouloir modifier cette étiquette de manière définitive ?"} do %>
            <i class="fas fa-check"> Modifier</i>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>
