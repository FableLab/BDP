<div class="row justify-content-md-center">
  <div class="col-lg-8 col-md-12">
    <div class="alert alert-primary border my-4" role="alert">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><%= link_to 'Administration', admin_index_path %></li>
          <li class="breadcrumb-item"><%= link_to 'Projets', admin_projets_path %></li>
          <li class="breadcrumb-item "><%= @projet.name %></li>
        </ol>
      </nav>
    </div>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-lg-5 col-md-6">
    <div class="card">
      <h5 class="card-header">Projet</h5>
      <div class="card-body">

        <form>
          <%= label :projet, 'Nom', class: 'mt-1' %>
          <%= text_field :projet, :name, class: 'form-control mt-1', readonly: :readonly  %>

          <%= label :projet, 'Identifiant', class: 'mt-3' %>
          <%= text_field :projet, :code, class: 'form-control mt-1', required: :required, minlength: 2, maxlength: 2, readonly: :readonly %>

          <%= label :user, 'Description', class: 'mt-3' %>
          <%= text_area :projet, :description, class: 'form-control mt-1', readonly: :readonly, rows: 10 %>

          <%= link_to edit_admin_projet_path(@projet), class: 'btn btn-warning mt-3' do %>
            <i class="fas fa-pencil-alt"> Modifier</i>
          <% end %>
        </form>
      </div>
    </div>
  </div>
</div>
