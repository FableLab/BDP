<div class="row justify-content-md-center">
  <div class="col-8">
    <div class="alert alert-primary border my-4" role="alert">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><%= link_to 'Administration', admin_index_path %></li>
          <li class="breadcrumb-item"><%= link_to 'Utilisateurs', admin_users_path %></li>
          <li class="breadcrumb-item "><%= @user.name %></li>
        </ol>
      </nav>
    </div>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-lg-4 col-md-6">
    <div class="card">
      <h5 class="card-header">Editer</h5>
      <div class="card-body">

        <%= form_with(model: @user, url: admin_user_path) do |f| %>
          <%= f.label 'Pseudo', class: 'mt-1' %>
          <%= f.text_field :name, class: 'form-control mt-1', required: :required  %>

          <%= f.label 'Adresse email', class: 'mt-3' %>
          <%= f.email_field :email, class: 'form-control mt-1', required: :required %>


          <div class="form-group form-check mt-3">
            <%= f.check_box :admin, class: 'form-check-input' %>
            <%= f.label 'Administrateur', class: 'form-check-label' %>
          </div>

          <%= link_to 'Détail', admin_user_path(@user), class: 'btn btn-primary mt-3' %>
          <%= f.submit 'Valider', class: 'btn btn-success mt-3' %>
        <% end %>
      </div>
    </div>

    <div class="card mt-4">
      <h5 class="card-header">Supprimer</h5>
      <div class="card-body">
        <p>Supprimer ce compte de manière définitive.</p>
        <%= link_to 'Supprimer', admin_user_path(@user), class: 'btn btn-danger', method: :delete, data: {confirm: "Êtes-vous bien sûr de vouloir supprimer ce compte de manière définitive ?"} %>
      </div>
    </div>

  </div>
</div>
