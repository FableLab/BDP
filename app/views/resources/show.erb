<div class="row justify-content-md-center mt-2">
  <div class="col-6">
    <div class="alert alert-primary border mt-4" role="alert">

  <ol class="breadcrumb m-0">
    <li class="breadcrumb-item"><%= link_to resources_path do  %><i class="fas fa-arrow-circle-left pe-1"></i> Retour<% end %></li>
  </ol>
</div>
    <div class="card">
      <h5 class="card-header"><%= @resource.slug %></h5>
      <div class="row align-items-center">
        <div class="col-6">
          <% if @resource.translation %>
            <h5 style="height: 330px" class="card-text align-items-center d-flex justify-content-center m-0 bg-light text-dark">
              <i class="fa fa-language pe-2"></i> <%= @resource.translation %>
            </h5>
          <% elsif @resource.format.try(:group) == 'Sons' %>
          <h5 style="height: 330px" class="card-text align-items-center d-flex justify-content-center m-0 bg-light text-dark">
            <i class="fa fa-volume-up pe-2"></i> <%= @resource.label.try(:name) %>
          </h5>
          <% else %>
          <h3></h3>
            <img class="card-img-top resources-thumb-img m-0" src="https://www.fable-lab.com/wp-content/uploads/h5p/content/31/images/match-5e2f1a769455c.png" alt="">
          <% end %>
        </div>
        <div class="col-6 py-3">
          <div class="">

            <h3><%= @resource.label.try(:name).capitalize %></h3>
            <p class="mb-1">Projet: <%= @resource.projet.try(:name) %></p>
            <p class="mb-1">Catégorie: <%= @resource.category.try(:name) %></p>
            <p class="mb-1">Format: <%= @resource.format.try(:name) %></p>
            <p class="mb-1">Mot: <%= @resource.label.try(:name) %></p>
            <p class="mb-1">Numéro: <%= @resource.code_number %></p>
            <p class="mb-1">Langue: <%= @resource.code_language %></p>
            <p class="mb-1">Dernière modification: <%= time_ago_in_words @resource.updated_at %></p>

            <button type="button" class="btn btn-success mt-3">Télécharger</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
